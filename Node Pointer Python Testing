# Online Python - IDE, Editor, Compiler, Interpreter
back = None
class Node():
    def __init__ (self, Data):
        self.Data = Data
        self.next = None
        self.back = back

Node1 = Node("Hello")
back = Node1
Node2 = Node("Hello")
back = Node2
Node3 = Node("Hello")
back = Node3
Node4 = Node("Hi")
back = Node4
#Next 
Node1.next = Node2
Node2.next = Node3
Node3.next = Node4
#Pointer 
class Nodeptr():
    def __init__(self, NodePting):
        self.thisNode = Node (Data = None)
        self.Nodeptr = self.thisNode
        self.thisNode.next = NodePting
        
Nodeptr1 = Nodeptr(Node2)

# Insert a Node
#Nodeptr1.next = Node2.next
#Node2.next = Nodeptr1

#Remove a Node
Nodeptr1.next = Node2.next
(Node2.back).next = Nodeptr1.next
del Node2

print (Node1.next, Node3)
